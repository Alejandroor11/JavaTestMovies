<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>usuario</servlet-name>
        <servlet-class>Servlets.usuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>pelicula</servlet-name>
        <servlet-class>Servlets.pelicula</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>trailer</servlet-name>
        <servlet-class>Servlets.trailer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>Servlets.index</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sesion</servlet-name>
        <servlet-class>Servlets.sesion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>usuario</servlet-name>
        <url-pattern>/usuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>pelicula</servlet-name>
        <url-pattern>/pelicula</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>trailer</servlet-name>
        <url-pattern>/trailer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sesion</servlet-name>
        <url-pattern>/sesion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
